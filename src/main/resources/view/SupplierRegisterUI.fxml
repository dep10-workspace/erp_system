<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/table_styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.erpSystem.controlls.SupplierRegisterUIController">
   <children>
      <Label alignment="CENTER" layoutY="5.0" prefHeight="35.0" prefWidth="435.0" text="Supplier Details" textFill="#2888d7" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox layoutX="10.0" layoutY="51.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="ID:" />
                  <TextField fx:id="txtID" editable="false" maxWidth="1.7976931348623157E308" promptText="Auto Generate by the System" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Name:" />
                  <TextField fx:id="txtName" maxWidth="1.7976931348623157E308" promptText="Ex: ABC Hardware" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="44.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Address:" />
                  <TextField fx:id="txtAddress" maxWidth="1.7976931348623157E308" promptText="Ex: No 200,Galle Road,Colombo 6" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="78.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Bank:" />
                  <TextField fx:id="txtBank" maxWidth="1.7976931348623157E308" promptText="Ex: BOC" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="112.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="100.0" text="Account No:" />
                  <TextField fx:id="txtAccountNo" maxWidth="1.7976931348623157E308" promptText="Ex: 1234567" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutX="32.0" layoutY="223.0" spacing="7.0">
         <children>
            <Label prefHeight="16.0" prefWidth="81.0" text="Contact No:" />
            <TextField fx:id="txtContact" promptText="Ex:011-1234567" />
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddOnAction" text="ADD" />
            <ListView fx:id="lstContacts" prefHeight="91.0" prefWidth="162.0" />
            <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="24.0" prefWidth="70.0" text="DELETE" />
         </children>
      </HBox>
      <Button fx:id="btnRegister" defaultButton="true" layoutX="231.0" layoutY="337.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="35.0" prefWidth="138.0" text="REGISTER" />
   </children>
</AnchorPane>
